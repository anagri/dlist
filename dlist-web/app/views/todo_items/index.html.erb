<h1>Listing Todo Items</h1>

<table width="100%">
  <tr>
    <th>Title</th>
    <th>Owner</th>
    <th>Priority</th>
    <th>Status</th>
    <th>Reminder</th>
    <th>Geo reminder</th>
    <th>Attachment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todo_items.each_with_index do |todo_item, i| %>
  <tr>
    <td><%= todo_item.title %></td>
    <td><%= todo_item.assigned_to %></td>
    <td><%= todo_item.priority %></td>
    <td><%= todo_item.status %></td>
    <td><%= todo_item.remind_at %></td>
    <td><%= todo_item.geo_remind_at %></td>
    <td><%= todo_item.attachment %></td>
    <td><%= link_to 'Show', url_for(:controller => :todo_items, :action => :show, :id => i) %></td>
    <td><%= link_to 'Edit', url_for(:controller => :todo_items, :action => :edit, :id => i) %></td>
    <td><%= link_to 'Destroy', url_for(:controller => :todo_items, :action => :destroy, :id => i), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

