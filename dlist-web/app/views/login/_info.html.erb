<% if @current_user -%>
    <div class="login_bar">Logged in as <%= @current_user.display_name %> | <%= link_to 'Logout', :controller => :login, :action => :logout %></div>
<% else %>
    <h3 style="text-align: center">You are currently not logged in. <%= link_to 'Login with Dropbox', @dropbox_authorize_url %></h3>
<%- end %>